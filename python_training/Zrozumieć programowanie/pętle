dania = input('Podaj liste ulubionych dań rozdzielając je przecinkiem: ')
dania = dania.split(',')
dania_index = 0
while dania_index < len(dania):
    print(f' {dania[dania_index]} na twojej liście zajmuje {dania_index + 1} miejsce')
    dania_index += 1
print('Tak się prezentuje twoja lista')



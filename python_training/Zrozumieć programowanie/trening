print("Cześć jestem Python i policzę prędkośc twojego biegu")

distance_input = input("Ile kilometrów przebiegłeś? ")
time_input = input("Ile zajęło ci to czasu? ")

distance = int(distance_input)
time = int(time_input)

speed = distance / time

print("Biegasz ze średnią prędkością", speed, "km/h")

age_input = input("Ile masz lat? ")
years = int(age_input)
print("Jest to", years * 12, "miesięcy")

distance_input = input("Ile kilometrów dziś przeszedłeś? ")
distance = int(distance_input)
days = 40075 / distance
weeks = days / 7
print("Okrążenie ziemi zajmie ci", weeks, "tygodni")

value_input = input("Jaka jest początkowa wartość kapitału? ")
intrest_input = input("Jakie jest oprocentowanie? ")
time_input = input("Ile lat będzie trwać lokata? ")

wartość_pocz = int(value_input)
oprocentowanie = int(intrest_input)
liczba_lat = int(time_input)

wartość = wartość_pocz * (1 + oprocentowanie/100) ** liczba_lat

print("Po wskazanym okresie lokata będzie wynosić", wartość, "złotych")

print(type('Napis'))
print(type("Inny napis"))
print(type(34))
print(type(7.14))
something = "Osiem"
print(type(something))
other =50
print(type(other))

Biedronka = float(input("Ile wynosi cena jabłek w Biedronce? "))
Lidl = float(input("Ile wynosi cena jabłek w Lidlu? "))
Żabka = float(input("Ile wynosi cena jabłek w Żabce? "))

print("Najtańsze jabłka kosztują", min(Biedronka, Lidl, Żabka), "złotych.")


